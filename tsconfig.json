{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "baseUrl": "./src/",
    "noEmit": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./src"
  ]
}