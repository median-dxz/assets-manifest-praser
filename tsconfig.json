{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src/",
    "declaration": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./src"
  ]
}